<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@android:color/white"
        android:id="@+id/relativeLayout">

        <TextView

            android:id="@+id/tvAboutQuiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:text="Test your IT knowledge. All the questions are very simple. Read and practice more"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/btnJava"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/btnBig_Data"
                android:layout_below="@+id/relativeLayout"
                android:background="@drawable/btnblue"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="JAVA"
                android:textColor="@android:color/black" />


            <Button
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Software Testing"
                android:textColor="@android:color/black"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:id="@+id/btnSoftware"
                android:background="@drawable/btnblue"
                android:layout_below="@+id/btnJava"
                android:layout_centerHorizontal="true" />

            <Button
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Web Technology"
                android:textColor="@android:color/black"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:id="@+id/btnWeb"
                android:background="@drawable/btnblue"
                android:layout_below="@+id/btnSoftware"
                android:layout_centerHorizontal="true" />

            <Button
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Big Data"
                android:textColor="@android:color/black"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:id="@+id/btnBig_Data"
                android:background="@drawable/btnblue"
                android:layout_below="@+id/btnWeb"
                android:layout_centerHorizontal="true" />

            <Button
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sap"
                android:textColor="@android:color/black"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:id="@+id/btnSap"
                android:background="@drawable/btnblue"
                android:layout_below="@+id/btnBig_Data"
                android:layout_centerHorizontal="true" />

            <Button
                android:id="@+id/btnAsp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnSap"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/btnblue"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="Asp.Net"
                android:textColor="@android:color/black" />

            <Button
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Oracle"
                android:textColor="@android:color/black"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:id="@+id/btnOracle"
                android:background="@drawable/btnblue"
                android:layout_below="@+id/btnAsp"
                android:layout_centerHorizontal="true" />

            <Button
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data WareHouse"
                android:textColor="@android:color/black"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:id="@+id/btnDataWare"
                android:background="@drawable/btnblue"
                android:layout_below="@+id/btnOracle"
                android:layout_centerHorizontal="true" />

            <Button
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="JavaScript"
                android:textColor="@android:color/black"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:id="@+id/btnDevops"
                android:background="@drawable/btnblue"
                android:layout_below="@+id/btnDataWare"
                android:layout_centerHorizontal="true" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>